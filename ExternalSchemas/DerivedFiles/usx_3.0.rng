      <value>iq</value>
      <!-- Introduction poetry text, level 1 (if single level) -->
      <value>iq1</value>
      <!-- Introduction poetry text, level 1 (if multiple levels) -->
      <value>iq2</value>
      <!-- Introduction poetry text, level 2 -->
      <value>iq3</value>
      <!-- Introduction poetry text, level 3 -->
      <value>is</value>
