  <define name="PeripheralSection">
    <element name="periph">
      <attribute name="id">
        <choice>
          <ref name="PeripheralSection.FRT.periph.id.enum"/>
          <ref name="PeripheralSection.INT.periph.id.enum"/>
          <ref name="PeripheralSection.BAK.periph.id.enum"/>
          <ref name="PeripheralSection.OTH.periph.id.enum"/>
          <data type="string">
            <param name="pattern">x\-[\w_\-\.:]+</param>
          </data>
        </choice>
      </attribute>
      <attribute name="alt"/>
      <zeroOrMore>
        <ref name="BookHeaders"/>
      </zeroOrMore>
      <oneOrMore>
        <ref name="BookTitles"/>
      </oneOrMore>
      <zeroOrMore>
        <ref name="BookIntroduction"/>
      </zeroOrMore>
      <zeroOrMore>
        <ref name="BookIntroductionEndTitles"/>
      </zeroOrMore>
      <optional>
        <ref name="Chapter"/>
      </optional>
      <zeroOrMore>
        <!-- Chapter may be used in some peripheral content sections to divide content alphabetically. -->
        <choice>
          <ref name="Chapter"/>
          <ref name="Para"/>
          <ref name="List"/>
          <ref name="Table"/>
          <ref name="Footnote"/>
          <ref name="CrossReference"/>
          <ref name="Sidebar"/>
        </choice>
      </zeroOrMore>
    </element>
  </define>
