      <value>s</value>
      <!-- A section heading, level 1 (if single level) -->
      <value>s1</value>
      <!-- A section heading, level 1 (if multiple levels) -->
      <value>s2</value>
      <!-- A section heading, level 2 (e.g. Proverbs 22-24) -->
