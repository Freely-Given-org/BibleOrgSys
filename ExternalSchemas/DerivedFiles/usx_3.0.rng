      <!-- Poetry text, embedded, level 1 indent (if single level) -->
      <value>qm1</value>
      <!-- Poetry text, embedded, level 1 indent (if multiple levels) -->
      <value>qm2</value>
      <!-- Poetry text, embedded, level 2 indent -->
      <value>qm3</value>
      <!-- Poetry text, embedded, level 3 indent -->
