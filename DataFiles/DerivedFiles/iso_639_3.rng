  <!-- The root element -->
  <start>
    <ref name="iso_639_3_entries"/>
  </start>
  <define name="iso_639_3_entries">
    <element name="iso_639_3_entries">
      <oneOrMore>
        <ref name="iso_639_3_entry"/>
      </oneOrMore>
    </element>
  </define>
  <define name="iso_639_3_entry">
    <element name="iso_639_3_entry">
      <attribute name="id">
        <data type="string">
          <param name="length">3</param>
        </data>
      </attribute>
      <attribute name="scope">
        <choice>
          <value>I</value>
          <value>M</value>
          <value>S</value>
        </choice>
      </attribute>
      <attribute name="type">
        <choice>
          <value>A</value>
          <value>C</value>
          <value>E</value>
          <value>H</value>
          <value>L</value>
          <value>S</value>
        </choice>
      </attribute>
      <attribute name="name">
        <data type="string"/>
      </attribute>
      <optional>
        <attribute name="part1_code">
          <data type="string">
            <param name="length">2</param>
          </data>
        </attribute>
      </optional>
      <optional>
        <attribute name="part2_code">
          <data type="string">
            <param name="length">3</param>
          </data>
        </attribute>
      </optional>
    </element>
  </define>
